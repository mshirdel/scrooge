<%= form_with(model: item, local: true) do |form| %>
<% if item.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

    <ul>
        <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="form-gorup">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
</div>

<div class="form-gorup">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control" %>
</div>

<div class="form-group">
    <%= form.label :date %>
    <input type="text" name="item[date]" class="pdate-picker form-control">
</div>

<div class="form-group">
    <%= form.label :group_id %>
    <%= form.collection_select :group_id, @groups.all, :id, :name, {},class: "form-control" %>
</div>

<div class="form-group">
    <%= form.label :item_type %>
    <%= form.select :item_type, @item.item_type_option,{}, class: "form-control" %>
</div>

<div class="form-group">
    <%= form.submit class: "btn btn-success" %>
</div>
<% end %>